<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvPrizeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free Whey Protein"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <ImageView
        android:id="@+id/imgPrizeQr"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="QR Code"
        android:src="@drawable/sample_qr_code" /> <!-- Placeholder if no QR yet -->

    <TextView
        android:id="@+id/tvPointsNeeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requires 10 Points"
        android:textColor="#555555"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnClaimPrize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Claim Prize"
        android:textAllCaps="false"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:padding="12dp" />
</LinearLayout>
